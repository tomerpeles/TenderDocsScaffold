    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": ["--pdf", "data/small-1-4.pdf", "--params", "config/parameters.json", "--out", "output", "--mock"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: main.py with args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--pdf", "data/small-1-4.pdf", "--params", "config/parameters.json", "--out", "output", "--mock"],
            "console": "integratedTerminal"
        }
    ]
}